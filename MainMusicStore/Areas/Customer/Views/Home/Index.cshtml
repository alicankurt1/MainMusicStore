@model IEnumerable<MainMusicStore.Models.DbModels.Product>

@{
    ViewData["Title"] = "Home Page";
}

<br /><br />

<h2> ÜRÜNLER </h2>
<br /><br />


<div class="row pb-3 backgroundWhite">
    @foreach (var product in Model)
    {



        <div class="col-lg-3 col-md-6">
            <div class="row p-2">
                <div class="col-12  p-1" style="border:1px solid #008cba; border-radius: 5px;">
                    <div class="card" style="border:0px;">
                        <img src="@product.ImageUrl" class="card-img-top rounded" style="width:250px; height:200px;" />
                        <div class="pl-1">
                            <p class="card-title h5"><b style="color:#2c3e50">@product.title</b></p>
                            <p class="card-title text-primary">Marka: &nbsp;<b>@product.Brand.Name</b></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p>Liste Fiyatı: <strike><b class="">&nbsp; @product.ListPrice.ToString("0.00") TL</b></strike></p>
                        </div>
                        <div style="padding-left:5px;">
                            <p style="color:maroon">Satış Fiyatı: <b class="">&nbsp; @product.Price.ToString("0.00") TL</b></p>
                        </div>
                    </div>
                    <div>
                        <a asp-action="Details" class="btn btn-success form-control" asp-route-id="@product.Id">Ürün Detayı</a>
                    </div>
                </div>
            </div>
        </div>



    }
</div>